<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/message_single_layout"
    android:padding="5dp"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/message_profile_layout"
        android:background="@drawable/profile"
        android:layout_margin="5dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="message"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@id/message_profile_layout"
        android:layout_marginStart="10dp"
        android:layout_below="@id/message_time_layout"
        android:id="@+id/message_chat_layout"
        android:background="@drawable/message_layout"
        android:textSize="14sp"
        android:padding="10dp"
        android:textColor="#000000"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/message_profile_layout"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:id="@+id/message_time_layout"
        android:text="time"
        android:textSize="15sp"
        android:layout_marginEnd="20dp"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:layout_below="@id/message_chat_layout"
        android:layout_toEndOf="@id/message_profile_layout"
        android:layout_margin="10dp"
        android:id="@+id/user_message_image"
        />


</RelativeLayout>