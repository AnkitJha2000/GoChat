<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/req_user_profile_thumb"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/profile" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/req_user_profile_thumb"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:id="@+id/req_user_display_name"
                android:text="User Name"
                android:textSize="25sp" />
            <TextView
                android:id="@+id/req_user_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hi there! I am using GO chat."
                android:layout_below="@id/req_user_display_name"
                android:layout_toRightOf="@id/req_user_profile_thumb"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                />



        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>